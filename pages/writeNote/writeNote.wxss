.icon-view {
  text-align: center;
}

.top-view {
  text-align: left;
  padding: 20rpx;
}

.image-list-view {
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  flex-wrap: wrap; /*图片选择过多时自动换行*/
}

.add-image-icon {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  background-color: #eee;
  position: relative;
  margin-left: 15rpx;
}

.add-image-icon::before{
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  width: 100rpx;
  margin-left: -50rpx;
  border-top: 2rpx solid rgb(77, 58, 58);
}

.add-image-icon::after{
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  height: 100rpx;
  margin-top: -50rpx;
  border-left: 2rpx solid rgb(77, 58, 58);
}


.image-item {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-bottom: 30rpx;
  background-color: #eee;
}

.big-image-item {
  width: 300rpx;
